<div class="cos-sm-9">
  <table>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <tr>
      <td>
        <!-- insert profile_image and link_to user_profile -->
        <%= @book.user.name %>
      </td>
      <td><%= @book.title %></td>
      <td><%= @book.opinion %></td>
      <% if @book.user.id == current_user.id %>
      <td><%= link_to "Edit", edit_book_path(@book) %></td>
      <td><%= link_to "delete", book_path(@book), method: :delete %></td>
      <% end %>
    </tr>
  </table>
</div>
