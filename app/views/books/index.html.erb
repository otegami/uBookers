<div id="sidemenu">
  <div class="row">
    <div class="col-sm-3">
    <%= form_for(@book) do |f| %>
      <div class="form-group has-icon">
        <label class="control-label sr-only">Title</label>
        <%= f.text_field :title, class:"form-control", placeholder:"Book Title" %>
        <span class="fa fa-building form-control-icon" aria-hidden="true" ></span>
      </div>
      <div class="form-group has-icon">
        <label class="control-label sr-only">Opinion</label>
        <%= f.text_area :opinion, class:"form-control", placeholder:"Your opinion about Book" %>
        <span class="fa fa-building form-control-icon" aria-hidden="true" ></span>
      </div>
      <%= f.submit "Post it", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
    <% end %>
    </div>
    <div class="cos-sm-9">
      <table>
        <tr>
          <th>User</th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.user.name %></td>
          <td><%= link_to "#{book.title}", book_path(book) %></td>
          <td><%= book.opinion %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
